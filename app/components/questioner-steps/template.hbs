{{#unless completed}}
  <!--Questioner Title -->
  <h1 class="question-container__title">{{model.title}}</h1>
  <!--Questioner Description -->
  <h5 class="question-container__description">{{model.title}}</h5>
  <div class="divider my-4"></div>
  <!-- Question Title -->
  <h3 class="question-container__sub-title">{{step.title}}</h3>
  <!-- Question Description -->
  <p class="question-container__sub-description">{{step.description}}</p>

  <!-- Question Type -->
  <div class="question-container__options">
    {{component step.component model=step}}
  </div>

  <!-- Questions Navigation -->
  <div class="question-container__actions mt-5">
    {{#if prev}}
      <button class="btn btn-secondary mr-auto" {{action "prevStep"}}>
        Prev
      </button>
    {{/if}}

    {{#unless finalStep}}
      <button class="btn btn-primary float-right" {{action "nextStep"}} >
        Next
      </button>
    {{else}}
      <button class="btn btn-success float-right ml-5" {{action "save"}}>
        Finish
      </button>
    {{/unless}}

    <div class="clearfix"></div>
  </div>
{{else}}
  <h1 class="text-center">Thank you.</h1>
{{/unless}}