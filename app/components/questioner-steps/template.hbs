<div class="page-container">

  <h1>{{model.title}}</h1>
  <h3>{{step.title}}</h3>
  <p>{{step.description}}</p>

  <div class="single-case-description">
    {{component step.component model=step}}
  </div>

  <div class="page-actions my-5">
    {{#if prev}}
      <button class="btn btn-secondary mr-auto" {{action "prevStep"}}>
        Prev
      </button>
    {{/if}}

    {{#unless finalStep}}
      <button class="btn btn-primary float-right" {{action "nextStep"}} >
        Next
      </button>
    {{else}}
      <button class="btn btn-success float-right ml-5" {{action "save"}}>
        Finish
      </button>
    {{/unless}}

    <div class="clearfix"></div>
  </div>
</div>